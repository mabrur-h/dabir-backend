# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ===========================================
# Database (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/uznotes

# ===========================================
# Redis (for BullMQ job queue)
# ===========================================
# Local development
REDIS_URL=redis://localhost:6379

# Production (Upstash)
# REDIS_URL=rediss://default:xxx@xxx.upstash.io:6379

# ===========================================
# Google Cloud Platform
# ===========================================
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1

# Google Cloud Storage
GCS_BUCKET_NAME=uznotes-uploads

# Service account credentials (local development)
# In production, use workload identity or mounted secrets
GOOGLE_APPLICATION_CREDENTIALS=./credentials/service-account.json

# ===========================================
# Gemini AI (Vertex AI)
# ===========================================
GEMINI_MODEL=gemini-2.5-flash

# ===========================================
# Authentication (JWT)
# ===========================================
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# File Upload Limits
# ===========================================
MAX_FILE_SIZE_BYTES=5368709120
ALLOWED_MIME_TYPES=audio/mpeg,audio/wav,audio/flac,audio/ogg,audio/mp4,audio/x-m4a,video/mp4,video/webm,video/quicktime

# ===========================================
# FFmpeg (for audio extraction)
# ===========================================
# Leave empty to use system FFmpeg
FFMPEG_PATH=

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug
